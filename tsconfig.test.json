{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  },
  "include": [
    "tests/**/*.ts",
    "gateway/**/*.ts",
    "container/**/*.ts"
  ]
}
