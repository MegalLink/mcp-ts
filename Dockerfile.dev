# Use a glibc-based Node.js image for development
FROM node:22-slim

# Set working directory
WORKDIR /app

# Install development dependencies first for better layer caching
COPY package*.json ./
RUN npm install

# Copy the rest of the source code
# Note: We'll use a volume mount in development, but this is needed for production builds
COPY . .

# Create a non-root user for better security
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs && \
    chown -R nextjs:nodejs /app

# Switch to non-root user
USER nextjs

# Expose port
EXPOSE 3000

ENTRYPOINT ["npx", "tsx", "main.ts"]